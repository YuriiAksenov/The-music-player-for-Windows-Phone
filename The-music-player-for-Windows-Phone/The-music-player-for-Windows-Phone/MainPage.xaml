<Page
    x:Class="The_music_player_for_Windows_Phone.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:The_music_player_for_Windows_Phone"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80*"/>
            <RowDefinition Height="400*"/>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="100*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Image 
            x:Name="imageBack"
            Source="Resources/ic_fast_rewind_black_24dp.png" 
            Stretch="Fill"
            Grid.Row="3"
            Grid.Column="0"
            Width="100"
            Height="100"
            Tapped="imageBack_Tapped"/>
        <Image 
            x:Name="imagePlay"
            Source="Resources/ic_pause_circle_outline_black_24dp.png" 
            Stretch="Uniform"
            Grid.Row="3"
            Grid.Column="1"
            Width="100"
            Height="100"
            />
        <Image 
            x:Name="imageNext"
            Source="Resources/ic_fast_forward_black_24dp.png"
            Grid.Column="2"
            Grid.Row="3" 
            Width="100"
            Height="100" 
            Tapped="imageNext_Tapped"/>

        <ListBox 
            x:Name="audioView" 
            Grid.Row="1" 
            Grid.ColumnSpan="3" 
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            SelectionMode="Extended"
            Background="Transparent"
            Foreground="White">

            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock
                        Text="{Binding title}"
                        Tag="{Binding url}"
                        Tapped="TextBlock_Tapped"
                        />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <TextBox 
            x:Name="textRequest" 
            HorizontalAlignment="Center"
            TextWrapping="Wrap"
            Width="380"
            Text=""
            VerticalAlignment="Center"
            Grid.Row="0"
            Grid.ColumnSpan="3"
            Height="39" TextChanged="textRequest_TextChanged"/>
        
        <MediaElement 
            x:Name="Player"
            VerticalAlignment="Center"
            HorizontalAlignment="Left"
            Height="100"
            Width="100"/>
        
        <ProgressBar 
            x:Name="ProgressPos" 
            Height="10" 
            Grid.Row="2" 
            Grid.ColumnSpan="3" 
            VerticalAlignment="Stretch"
            Width="380" 
            />

        


        <Grid.Background>
            <ImageBrush Stretch="UniformToFill" 
                        ImageSource="Resources/colorful-triangles-background.jpg"/>
        </Grid.Background>

    </Grid>
</Page>
